<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MountainDetailActivity"
    android:layout_marginTop="40dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:fontFamily="@font/goyang_ilsan_regular"
            android:text="산행지 상세보기"
            android:textColor="@android:color/black"
            android:textSize="23dp" />

        <View
            android:id="@+id/view_below_hashtag"
            android:layout_width="165dp"
            android:layout_height="1dp"

            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:background="@color/black" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mountain_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/goyang_ilsan_regular"
                        android:text="지리산"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/iv_mountain_bookmark"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_community_good_off" />

                    <ImageView
                        android:id="@+id/btn_recommend_add"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_plus"
                        android:visibility="gone"/>
                </LinearLayout>


                <ImageView
                    android:id="@+id/mountain_detail_img_chosen"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_product" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mountain_detail_img1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_product" />

                    <ImageView
                        android:id="@+id/mountain_detail_img2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_product"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/mountain_detail_img3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_product"
                        android:visibility="visible" />
                </LinearLayout>

                <View
                    android:id="@+id/view_line"
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="15dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/goyang_ilsan_regular"
                        android:text="주소 : "
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/mountain_detail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/goyang_ilsan_regular"
                        android:text="어디어디어디어디"
                        android:textSize="15dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/goyang_ilsan_regular"
                        android:text="높이 : "
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/mountain_detail_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/goyang_ilsan_regular"
                        android:text="9999999"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/goyang_ilsan_regular"
                        android:text="m"
                        android:textSize="15dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/goyang_ilsan_regular"
                        android:text="특징 : "
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/mountain_detail_feature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/goyang_ilsan_regular"
                        android:text="높음 높아요 아주 높아요"
                        android:textSize="15dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.2dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="15dp"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/pyungjum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="평점"
                        android:fontFamily="@font/goyang_ilsan_regular"
                        android:textSize="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"/>

                    <RatingBar
                        android:id="@+id/mountain_detail_ratingbar"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/pyungjum"
                        android:isIndicator="false"
                        android:stepSize="1"/>

                    <TextView
                        android:id="@+id/mountain_detail_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/mountain_detail_ratingbar"
                        android:fontFamily="@font/goyang_ilsan_regular"
                        android:text="0점"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="20dp" />



                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/comment_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lastlayout"
                    android:orientation="horizontal"

                    android:weightSum="1.0">

                    <EditText
                        android:id="@+id/mountain_detail_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.8"
                        android:hint="평가를 작성해주세요"
                        android:fontFamily="@font/goyang_ilsan_regular"
                        android:maxLines="1" />

                    <Button
                        android:id="@+id/mountain_detail_addComment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.2"
                        android:text="등록"
                        android:fontFamily="@font/goyang_ilsan_regular"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="10dp"
                    android:id="@+id/rv_mountain_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</RelativeLayout>