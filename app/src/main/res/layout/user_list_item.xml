<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical"
    android:background="@drawable/shadow_sm"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ll_user_item"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/list_user_picture"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/no_profile"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/list_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/goyang_ilsan_regular"
                    android:text="홍길동"
                    android:textColor="@color/teal_700"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/list_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/list_user_name"
                    android:fontFamily="@font/goyang_ilsan_regular"
                    android:text="email"
                    android:textSize="15dp" />
            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_next" />

<!--        <TextView-->
<!--            android:id="@+id/mountain_list_feature"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="15dp"-->
<!--            android:text="산 특징"/>-->
    </RelativeLayout>



</LinearLayout>